<h1>Listing all books</h1>
<p>
  <%= link_to "Create new book", new_book_path, class: "btn btn-xs btn-primary" %>
</p>
<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Year</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.name %></td>
      <td><%= book.author %></td>
      <td><%= book.year %></td>
      <td><%= link_to 'Edit', edit_book_path(book) ,class: "btn btn-xs btn-primary"%></td>
      <td><%= link_to 'Show', book_path(book) ,class: "btn btn-xs btn-success" %></td>
      <td><%= link_to 'Delete', book_path(book), method: :delete, data: {confirm: "Are you sure?"} , class: "btn btn-xs btn-danger"%></td>
    </tr>
  <% end %>
</table>