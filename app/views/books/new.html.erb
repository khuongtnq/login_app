<%= render 'shared/errors', obj: @book %>
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@book, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :name, class: "form-control", placeholder: "Title of book", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :author %>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :author,  class: "form-control", placeholder: "Author of book" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :year %>
        </div>
        <div class="col-sm-6">
          <%= f.text_field :year,  class: "form-control", placeholder: "Year of book" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= f.submit class: 'btn btn-primary btn-large' %>
        </div>
      </div>
    <% end %>
    <%=  link_to 'Back', books_path, class: "btn btn-xs btn-success"  %>
  </div>
</div>